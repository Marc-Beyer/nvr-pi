{
    "name": "nvr-pi",
    "version": "1.0.0",
    "description": "A simple nvr for the pi",
    "main": "./src/app.js",
    "author": "Marc Beyer",
    "license": "ISC",
    "type": "module",
    "scripts": {
        "clean": "rimraf ./dist",
        "build-ts": "npx tsc",
        "build-assets": "copyfiles -a -u 1 ./build-assets/**/* ./dist",
        "build-public": "copyfiles -a -u 1 ./public/**/* ./dist/public",
        "build": "npm run clean && npm run build-ts && npm run build-public && npm run build-assets",
        "start": "npm run build && node ./dist/js/app.js",
        "dev": "nodemon --watch ./src/** ./public/styles/** --ext ts --exec ts-node-esm ./src/app.ts",
        "dev2": "nodemon --watch ./src/**",
        "ts-node": "ts-node-esm ./src/app.ts",
        "ts-node2": "npm run sass && ts-node-esm ./src/app.ts",
        "prettier": "npx prettier . --write",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --fix --ext .ts",
        "fix": "npm run prettier && npm run lint",
        "sass": "sass public/styles:public/styles"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.15",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "copyfiles": "^2.4.1",
        "eslint": "^8.38.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-import": "^2.27.5",
        "nodemon": "^3.0.1",
        "prettier": "3.0.0",
        "rimraf": "^5.0.1",
        "sass": "^1.63.6",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@types/ejs": "^3.1.2",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "date-fns": "^2.30.0",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.9",
        "express": "^4.18.2"
    }
}
