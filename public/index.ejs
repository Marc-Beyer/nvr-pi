<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CCTV</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìΩÔ∏è</text></svg>">

    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <div id="main-content">
        <h1>Recordings</h1>
        <div class="calender">
            <div class="calender-header">
                <a class="button" href="/?addMonths=<%= monthToAdd - 1 %>">‚óÄ</a>
                <h2><%= month %></h2>
                <a class="button" href="/?addMonths=<%= monthToAdd + 1 %>">‚ñ∂</a>
            </div>
            <div class="calender-content">
                <div class="day day-of-the-week-heading">Mo</div>
                <div class="day day-of-the-week-heading">Di</div>
                <div class="day day-of-the-week-heading">Mi</div>
                <div class="day day-of-the-week-heading">Do</div>
                <div class="day day-of-the-week-heading">Fr</div>
                <div class="day day-of-the-week-heading">Sa</div>
                <div class="day day-of-the-week-heading">So</div>
                <% for (const item of days) { %>
                    <% if (item.hasRecording) { %>
                        <a class="day has-recording <%= item.isThisMonth ? 'this-month' : '' %>" href="/recordings?date=<%= item.date %>">
                            <%= item.nr %>
                        </a>
                    <% } else { %>
                        <div class="day <%= item.isThisMonth ? 'this-month' : '' %>">
                            <%= item.nr %>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        <% if (showTodayBtn) { %>
            <a class="button space-top" href="/">üìÖ BACK TO TODAY</a>
        <% } %>
        <form class="space-top" action="/event" method="post">
            <input type="submit" value="üö® TRIGGER EVENT">
        </form>
        <% if (optionsUrl !== undefined) { %>
            <a class="button space-top" href="<%= optionsUrl %>">‚öôÔ∏è SETTINGS</a>
        <% } %>
    </div>
</body>
</html>